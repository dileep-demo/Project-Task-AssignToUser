@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center mb-3"></div>

<div class="row text-center">
    <div class="col-md-4">
        <div class="card border-1 mb-3">
            <div class="card-body">
                <h5 class="card-title">TOTAL PROJECTS</h5>
                <h1 class="card-text">@ViewBag.TotalProjects</h1>
                <a asp-controller="Project" asp-action="Index" class="btn btn-success">View Projects</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-1 mb-3">
            <div class="card-body">
                <h5 class="card-title">TOTAL TASKS</h5>
                <h1 class="card-text">@ViewBag.TotalTasks</h1>
                <a asp-controller="Task" asp-action="Index" class="btn btn-success">View Tasks</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-1 mb-3">
            <div class="card-body">
                <h5 class="card-title">TOTAL ASSIGNEES</h5>
                <h1 class="card-text">@ViewBag.totalAssignees</h1>
                <a asp-controller="Task" asp-action="Index" class="btn btn-success">View Assignees</a>
            </div>
        </div>
    </div>
</div>
