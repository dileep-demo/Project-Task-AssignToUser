@model ProjectTaskAssign.ViewModels.AssigneeViewModel

@{
    ViewData["Title"] = "Edit Assignee";
}

<h1 class="mb-4">Edit Assignee</h1>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="AssigneeId" />
    <div class="mb-3">
        <label asp-for="FullName" class="form-label">User Name</label>
        <input asp-for="FullName" class="form-control" placeholder="Enter user name" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" placeholder="Enter email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="mt-4">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
