@model IEnumerable<ProjectTaskAssign.ViewModels.ProjectViewModel>
@{
    ViewData["Title"] = "Project List";
}

<h1 class="mb-4">Project List</h1>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

<table class="table table-bordered border-2 mb-1">
    <thead class="table-light">
        <tr>
            <th>Project Name</th>
            <th>Start Date</th>
            <th>Total Tasks</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.Name</td>
                <td>@project.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@project.TotalTasks</td>
                <td>
                    <a asp-action="UpdateProject" asp-route-id="@project.ProjectId" class="text-primary">Edit</a> |
                    <form asp-action="DeleteProject" asp-route-id="@project.ProjectId" method="post" class="d-inline">
                        <button type="submit" class="btn btn-link text-danger delete-link">Delete</button>
                    </form> |
                    <a asp-action="ViewDetails" asp-route-projectId="@project.ProjectId" class="text-success">ViewTasks</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-5 text-center">
    <a asp-action="CreateProject" class="btn btn-success">Add New Project</a>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteLinks = document.querySelectorAll(".delete-link");
            deleteLinks.forEach(link => {
                link.addEventListener("click", function (event) {
                    const confirmDelete = confirm("Are you sure you want to delete this project?");
                    if (!confirmDelete) {
                        event.preventDefault(); 
                    }
                });
            });
        });
    </script>
}
