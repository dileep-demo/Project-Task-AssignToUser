@model IEnumerable<ProjectTaskAssign.ViewModels.TaskViewModel>
@{
    ViewData["Title"] = "Task List";
}

<h1 class="mb-4">Task List</h1>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info text-center">@ViewBag.Message</div>
}

<div class="table-responsive">
    <table class="table table-bordered border-2">
        <thead class="table-light">
            <tr>
                <th>Task Name</th>
                <th>Project Name</th>
                <th>UserName</th>
                <th>Status</th>
                <th>Completion Date</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Name</td>
                        <td>@task.ProjectName</td>
                        <td>@task.FullName</td>
                        <td>@task.Status</td>
                        <td>@task.CompletionDate.ToString("yyyy-MM-dd")</td>
                        <td class="text-center">
                            <a asp-action="UpdateTask" asp-route-id="@task.TaskId" class="btn btn-sm btn-primary me-1">Edit</a>
                            <form asp-action="DeleteTask" asp-route-id="@task.TaskId" asp-route-projectId="@task.ProjectId" method="post" class="d-inline delete-form">
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No tasks available.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="mt-4 text-center">
    <a asp-action="CreateTask" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-success">Add New Task</a>
</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const deleteForms = document.querySelectorAll(".delete-form");
            deleteForms.forEach(form => {
                form.addEventListener("submit", function (event) {
                    const confirmDelete = confirm("Are you sure you want to delete this task?");
                    if (!confirmDelete) {
                        event.preventDefault(); // Prevent the form submission if the user cancels
                    }
                });
            });
        });
    </script>
}
